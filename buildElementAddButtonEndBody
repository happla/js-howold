function tervehdi() {
	console.log("Moikka!");
}


//luodaan uusi button element
function lisaaPainike() {
var luotuPainike = document.createElement("button");

//teksti painikkeeseen button 
	luotuPainike.innerHTML = "Uusi painike";
 
 //attribuutin arvo
	luotuPainike.setAttribute("id", "luotuPainike");
 
 //+ onclick funktio, joka kutsuu tervehdi funktiota
	luotuPainike.onclick = function() {
		tervehdi();
	}
 // lis채채 painikkeen dokumentin loppuun
	document.body.appendChild(luotuPainike);
}

<button onclick = "luotupainike()"> lis채채 button </button>
